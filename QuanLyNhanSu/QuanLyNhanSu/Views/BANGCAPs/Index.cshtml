@model IEnumerable<QuanLyNhanSu.Models.BANGCAP>

@{
    ViewBag.Title = "Degree List";
}

<h2>Degree List</h2> 

<p>
    @Html.ActionLink("Create New", "Create") <br/>
</p>
<p>
    @using (Html.BeginForm("Index","BANGCAPs",FormMethod.Get))
    {
    <b> Search by : </b> 
    @Html.RadioButton("searchBy", "TENBC",true) <text>TENBANGCAP</text>
    @Html.RadioButton("searchBy", "LOAIBC") <text>LOAIBANGCAP</text>
    @Html.RadioButton("searchBy", "DVCAP")<text> DONVICAP</text> <br />
    @Html.TextBox("search") <input type="submit" value="Search" />

    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Tên nhân viên", "Index", new { sortOrder = ViewBag.TennvSortParm })
        </th>
        <th>
            @Html.ActionLink("Tên bằng cấp", "Index", new { sortOrder = ViewBag.TenbcSortParm })
        </th>
        <th>
            @Html.ActionLink("Loại bằng cấp", "Index", new { sortOrder = ViewBag.LoaibcSortParm })
        </th>
        <th>
            @Html.ActionLink("Ngày cấp", "Index", new { sortOrder = ViewBag.NgaycapSortParm })
        </th>
        <th>
            @Html.ActionLink("Đơn vị cấp", "Index", new { sortOrder = ViewBag.DvcapSortParm })
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NHANVIEN.HOTEN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TENBC)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LOAIBC)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NGAYCAP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DVCAP)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.MABC }) |
            @Html.ActionLink("Details", "Details", new { id=item.MABC }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.MABC })
        </td>
    </tr>
}

</table>
